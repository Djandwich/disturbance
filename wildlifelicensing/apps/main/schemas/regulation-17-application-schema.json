[
    {
        "type": "section",
        "label": "Project Type",
        "children": [
            {
                "type": "select",
                "label": "Which of the following describes your project?",
                "name": "project_type",
                "defaultBlank": true,
                "options": [
                    {"value": "survey", "label": "Survey"},
                    {"value": "monitoring", "label": "Monitoring"},
                    {"value": "research", "label": "Research"}
                ]
            }
        ]
    },
    {
        "type": "section",
        "label": "Approvals and Permits",
        "children": [
            {
                "type": "select",
                "label": "Does this project require any other approvals, permits, licences, etc under any other state or federal legislation?",
                "name": "requires_permits",
                "options": [
                    {"value": "yes", "label": "Yes"},
                    {"value": "no", "label": "No"},
                    {"value": "unsure", "label": "Unsure"}
                ],
                "condition": "yes",
                "children": [
                    {
                        "type": "file",
                        "label": "Please provide detail and attach any applications made or permissions granted.",
                        "name": "permits"
                    },
                    {
                        "type": "declaration",
                        "label": "I acknowledge that should other permissions/approvals be required it may affect the processing time for this Regulation 17 licence",
                        "name": "permits_acknowledgement"
                    }
                ]
            }
        ]
    },
    {
        "type": "section",
        "label": "Financial Basis",
        "children": [
            {
                "type": "radiobuttons",
                "label": "How is your project funded?",
                "name": "financial_basis",
                "options": [
                    {"value": "grant", "label": "Grant / Sponsored"},
                    {"value": "contract", "label": "Contract / Consulting"},
                    {"value": "other", "label": "Other - Please provide details"}
                ],
                "condition": "other",
                "children": [
                    {
                        "type": "text_area",
                        "label": "Affiliated Organisation / Client / Sponsor",
                        "name": "financial_details"
                    }
                ]
            }
        ]
    },
    {
        "type": "section",
        "label": "Project Details",
        "children": [
            {
                "type": "text",
                "label": "Project title",
                "name": "project_title"
            },
            {
                "type": "file",
                "label": "Project Proposal",
                "name": "project_proposal"
            },
            {
                "type": "text_area",
                "label": "Background summary",
                "name": "background_summary"
            },
            {
                "type": "text_area",
                "label": "Main Objectives",
                "name": "main_objectives"
            },
            {
                "type": "text_area",
                "label": "Conservation outcomes",
                "name": "conservation_outcomes"
            }
        ] 
    },
    {
        "type": "section",
        "label": "Personal Details",
        "children": [
            {
                "type": "text",
                "label": "Provide relevant qualifications and/or experience details specific to this project (if not already provided in your profile)",
                "name": "qualifications"
            },
            {
                "type": "file",
                "label": "Qualification Attachment(s)",
                "name": "qualification_attachment"
            },
            {
                "type": "declaration",
                "label": "I acknowledge that I am legally responsible for the actions of anyone involved in the take of fauna activities under this licence.",
                "name": "authorised_persons_acknowledgement"
            },
            {
                "type": "group",
                "label": "Authorised Person",
                "name": "authorised_persons",
                "isRepeatable": true,
                "children": [
                    {
                        "type": "text",
                        "label": "Surname",
                        "name": "ap_surname"
                    },
                    {
                        "type": "text",
                        "label": "Given name(s)",
                        "name": "ap_given_names"
                    },
                    {
                        "type": "date",
                        "label": "Date of birth",
                        "name": "ap_dob"
                    },
                    {
                        "type": "select",
                        "label": "Association to applicant",
                        "name": "ap_association",
                        "defaultBlank": true,
                        "options": [
                            {"value": "volunteer", "label": "Volunteer"},
                            {"value": "contractor", "label": "Contractor"},
                            {"value": "staff", "label": "Staff / Employee"},
                            {"value": "student", "label": "Student"},
                            {"value": "other", "label": "Other - Please provide details"}
                        ],
                        "condition": "other",
                        "children": [
                            {
                                "type": "text",
                                "label": "Details",
                                "name": "ap_association_other_details"
                            }
                        ]
                    },
                    {
                        "type": "select",
                        "label": "Role",
                        "name": "ap_role",
                        "defaultBlank": true,
                        "options": [
                            {"value": "handler", "label": "Handler"},
                            {"value": "scribe", "label": "Scribe"},
                            {"value": "assistant", "label": "Assistant"}
                        ],
                        "condition": "handler",
                        "children": [
                            {
                                "type": "select",
                                "label": "Handler Type",
                                "name": "ap_handler_type",
                                "defaultBlank": true,
                                "options": [
                                    {"value": "biopsy", "label": "Biopsy"},
                                    {"value": "chipping", "label": "Chipping"},
                                    {"value": "collaring", "label": "Collaring"},
                                    {"value": "anasthaesia", "label": "Anasthaesia"},
                                    {"value": "other", "label": "Other"}
                                ]
                            }
                        ]
                    },
                    {
                        "type": "file",
                        "label": "Provide relevant qualification / experience (relative to activity)",
                        "name": "ap_qualification"
                    }
                ]
            },
            {
                "type": "text_area",
                "label": "If a list of authorised persons is not currently available, please explain:",
                "name": "ap_unavailable_explanation"
            },
            {
                "type": "declaration",
                "label": "I acknowledge that I will make changes in this system to authorised persons throughout licence duration if changes are required",
                "name": "ap_change_acknowledgement"
            }
       ]
    },
    {
        "type": "section",
        "label": "Locations",
        "children": [
            {
                "type": "text_area",
                "label": "Address",
                "name": "address"
            },
            {
                "type": "text",
                "label": "Coordinate / GPS",
                "name": "coordinates"
            },
            {
                "type": "date",
                "label": "Start Date",
                "name": "start_date"
            },
            {
                "type": "date",
                "label": "End Date",
                "name": "end_date"
            },
            {
                "type": "select",
                "label": "Regular Intervals",
                "name": "regular_intervals",
                "defaultBlank": false,
                "options": [
                    {"value": "weekly", "label": "Weekly"},
                    {"value": "fortnightly", "label": "Fortnightly"},
                    {"value": "monthly", "label": "Monthly"},
                    {"value": "quarterly", "label": "Quarterly/Seasonally"},
                    {"value": "biannually", "label": "Biannually/Six-monthly"},
                    {"value": "annually", "label": "Annually"},
                    {"value": "biennually", "label": "Biennially/Every two years"},
                    {"value": "other", "label": "Other"}
                ],
                "condition": "other",
                "children": [
                    {
                        "type": "text",
                        "label": "Please Specify",
                        "name": "regular_intervals_other"
                    }
                ]
            },
            {
                "type": "label",
                "label": "What survey type will you be conducting?",
                "name": "survey"
            },
            {
                "type": "checkbox",
                "label": "Level 1 / reconnaissance",
                "name": "reconnaissance"
            },
            {
                "type": "checkbox",
                "label": "Level 2 / detailed or comprehensive",
                "name": "comprehensive"
            },
            {
                "type": "checkbox",
                "label": "Short range endemic (SRE)",
                "name": "sre"
            },
            {
                "type": "checkbox",
                "label": "Aquatic (non-marine)",
                "name": "aquatic"
            },
            {
                "type": "checkbox",
                "label": "Marine",
                "name": "marine"
            },
            {
                "type": "checkbox",
                "label": "Targeted",
                "name": "targeted",
                "condition": "checked",
                "children": [
                    {
                        "type": "group",
                        "label": "Targeted Fauna Type",
                        "name": "targeted_fauna",
                        "isRepeatable": true,
                        "children": [
                            {
                                "type": "text",
                                "label": "Common name / Group name",
                                "name": "tft_common_name"
                            },
                            {
                                "type": "text",
                                "label": "Scientific name",
                                "name": "tft_scientific_name"
                            },
                            {
                                "type": "text",
                                "label": "Quantity",
                                "name": "tft_quantity"
                            },
                            {
                                "type": "text",
                                "label": "Fate",
                                "name": "tft_fate"
                            }
                        ]
                    }
                ]
            },
            {
                "type": "checkbox",
                "label": "Biennially/Every two years",
                "name": "biennually"
            },
            {
                "type": "checkbox",
                "label": "Other",
                "name": "other"
            },
            {
                "type": "radiobuttons",
                "label": "Will your activity interact with any threatened or priority fauna (including non-target species)?",
                "name": "threatened_priority_fauna",
                "options": [
                    {"value": "yes", "label": "Yes"},
                    {"value": "no", "label": "No"},
                    {"value": "unknown", "label": "Unknown"}
                ],
                "condition": "yes",
                "children": [
                    {
                        "type": "group",
                        "label": "Threatened Fauna",
                        "name": "threatened_fauna",
                        "isRepeatable": true,
                        "children": [
                            {
                                "type": "text",
                                "label": "Common name / Group name",
                                "name": "tf_common_name"
                            },
                            {
                                "type": "text",
                                "label": "Scientific name",
                                "name": "tf_scientific_name"
                            }
                        ]
                    }
                ]
            },
            {
                "type": "text",
                "label": "If activity has been (or is being) assessed by an Animal Ethics Committee (AEC) provide committee name.",
                "name": "aec_name"
            },
            {
                "type": "text",
                "label": "Provide AEC approval number.",
                "name": "aec_approval_number"
            },
            {
                "type": "file",
                "label": "Attach a copy of the AEC project application and approval if not already been provided.",
                "name": "aec_application_and_approval"
            },
            {
                "type": "radiobuttons",
                "label": "Will your activities be in accordance with Parks and Wildlife standard operating procedures?",
                "name": "standard_operating_procedures",
                "options": [
                    {"value": "yes", "label": "Yes"},
                    {"value": "no", "label": "No"}
                ]
            },
            {
                "type": "radiobuttons",
                "label": "Will your activities be in accordance with EPA Guidance Statements, Position Statements or Technical Reports?",
                "name": "epa_statements",
                "options": [
                    {"value": "yes", "label": "Yes"},
                    {"value": "no", "label": "No"}
                ]
            },
            {
                "type": "radiobuttons",
                "label": "Will your activities be in accordance with any other SOPs, protocols, guidelines or manuals?",
                "name": "sops",
                "options": [
                    {"value": "yes", "label": "Yes"},
                    {"value": "no", "label": "No"}
                ],
                "condition": "yes",
                "children": [
                    {
                        "type": "text",
                        "label": "Provide details",
                        "name": "sops_details"
                    },
                    {
                        "type": "file",
                        "label": "Attach a copy of the relevent document(s)",
                        "name": "sops_documents"
                    }
                ]
            }
        ]
    }
]
