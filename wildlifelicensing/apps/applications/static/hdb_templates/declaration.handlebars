<div class="form-group">
    <label for="{{id}}">
        <input id="{{id}}" name="{{name}}" type="checkbox" {{#if required}}data-parsley-required{{/if}} {{#if value}}checked{{/if}}>
        {{label}}
    </label> 
    {{#if help_text}}
        <p class="help-block">{{ help_text }}</p>
    {{/if}}
</div>